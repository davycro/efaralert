.page-header
  %h2
    EFARS
    .pull-right
      .btn-toolbar
        .btn-group
          %a.btn.active{:href => efars_path }
            Table
          %a.btn{:href => map_efars_path}
            Map
        .btn-group
          %a.btn{:href=> new_efar_path }
            Create

- if flash[:notice].present?
  .alert
    = flash[:notice]
    %button.close{:type=>"button", "data-dismiss"=>"alert"} &times;

%table.table
  %thead
    %tr
      %th Name
      %th Contact number
      %th Location
      %th Community
      %th Head?

  %tbody
    - @efars.each do |efar|
      %tr
        %td= link_to efar.full_name, efar
        %td= efar.readable_contact_number
        %td= efar.given_address
        %td= efar.community_center.name
        %td= "Yes" if efar.is_head_efar
        %td
          .btn-group
            %a.btn.btn-mini.dropdown-toggle{"data-toggle"=>"dropdown", :href=>'#'}
              %i.icon-cog
              %span.caret
            %ul.dropdown-menu.pull-right
              %li
                %a{:href=>edit_efar_path(efar)}
                  %i.icon-pencil
                  Edit
              %li
                %a{:href=>efar_path(efar), "data-confirm"=>"Are you sure?", "data-method"=>"delete"}
                  %i.icon-trash
                  Delete
  