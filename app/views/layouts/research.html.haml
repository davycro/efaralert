!!!
%html
  %head
    %title EFAR RESEARCH
    = stylesheet_link_tag 'research'

    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=false"}
    = javascript_include_tag 'research'
    = render :partial => 'layouts/ga'
    = csrf_meta_tags
  %body

    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.brand{ :href=>research_map_path } EFAR Research
          %ul.nav
            %li{:class=> controller.controller_name=="maps" && "active"}
              %a{ :href => research_map_path } Maps
          %ul.nav.pull-right
            %li.dropdown
              %a{ :href => '#', :class => "dropdown-toggle", "data-toggle" => "dropdown" }
                = @current_researcher.full_name
                %b.caret
              %ul{:class=>"dropdown-menu"}
                %li
                  %a{ :href => research_account_path } My Account
                %li
                  = link_to 'Logout', research_session_path, :method => :delete

  = yield


    