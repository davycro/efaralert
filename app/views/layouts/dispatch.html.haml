!!!
%html
  %head
    %title EFAR
    = stylesheet_link_tag 'dispatch'

    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=false"}
    = javascript_include_tag 'dispatch'
    = render :partial => 'layouts/ga'
    = csrf_meta_tags
  %body

    .navbar.navbar-inverse.navbar-fixed-top.navbar-efar
      .navbar-inner
        .container
          .efar-brand{:href=>'#'}
            .efar-shield
              %i.efar-sprite-logo
              .logo-text EFAR Dispatch
          %ul.nav
            %li{:class=>controller.controller_name=='dispatches' && "active"}
              %a{:href => dispatches_path } Dispatches
          %ul.nav.pull-right
            %li.dropdown
              %a{ :href => '#', :class => "dropdown-toggle", "data-toggle" => "dropdown" }
                = @current_dispatcher.full_name
                %b.caret
              %ul{:class=>"dropdown-menu"}
                %li
                  %a{ :href => account_path } My Account
                %li
                  = link_to 'Logout', session_path, :method => :delete

  .container
    = yield

:javascript
  jQuery(function(){
    new App("#{controller.controller_name}/#{controller.action_name}");
  });


    