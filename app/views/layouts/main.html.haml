!!!
%html
  %head
    %title EFAR
    = stylesheet_link_tag "main", :media => "all"
    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=false"}
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render :partial => 'layouts/ga'
    
  %body
    .navbar.navbar-inverse.navbar-fixed-top.navbar-efar
      .navbar-inner
        .container
          %a.efar-brand{:href=>active_efars_path}
            .efar-shield
              %i.efar-sprite-logo
              .logo-text= @current_manager.community.name
          %ul.nav
            %li{:class => controller.controller_name == 'efars' && 'active'}
              = link_to 'EFARs', active_efars_path
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{'data-toggle'=>'dropdown', href: '#'}
                = @current_manager.full_name
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Your Account', account_path
                %li
                  = link_to 'Logout', session_path, :method => :delete

    .container
      = yield

    .footer
      .container
        .footer-panel
          %small.muted
            Built by David Crockett. Sponsored by Western Cape EMS
          = debug(params) if Rails.env.development?

