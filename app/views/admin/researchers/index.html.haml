.page-header
  %h3
    Researchers
    .pull-right
      %a.btn.btn-primary.btn-small{:href => new_admin_researcher_path}
        %i.icon-plus.icon-white
        Create

- if flash[:notice].present?
  .alert
    = flash[:notice]
    %button.close{:type=>"button", "data-dismiss"=>"alert"} &times;

%table.table
  %thead
    %tr
      %th Full Name
      %th Email
      %th Affiliation
  %tbody
    - @researchers.each do |researcher|
      %tr
        %td= researcher.full_name
        %td= researcher.email
        %td= researcher.affiliation
        %td
          .btn-group
            %a.btn.btn-mini.dropdown-toggle{"data-toggle"=>"dropdown", :href=>'#'}
              %i.icon-cog
              %span.caret
            %ul.dropdown-menu.pull-right
              %li
                %a{:href=>edit_admin_researcher_path(researcher)}
                  %i.icon-pencil
                  Edit
              %li
                %a{:href=>admin_researcher_path(researcher), "data-confirm"=>"Are you sure?", "data-method"=>"delete"}
                  %i.icon-trash
                  Delete
          
.form-actions
  %a.btn.btn-primary.btn-small{:href => new_admin_researcher_path}
    %i.icon-plus.icon-white
    Add new researcher  
