- content_for :section_header do
  %h3= "#{@efar.full_name}"

- content_for :section_actions do
  %a.btn.btn-link{:href => edit_admin_efar_path(@efar) } Edit

- if flash[:notice].present?
  .alert
    = flash[:notice]
    %button.close{:type=>"button", "data-dismiss"=>"alert"} &times;

%dl.dl-horizontal
  %dt Community Center
  %dd= @efar.community_center.name

%dl.dl-horizontal
  %dt Contact Numbers
  - @efar.contact_numbers.each do |c|
    %dd= c.contact_number

- @efar.locations.each do |l|
  %dl.dl-horizontal
    %dt Address
    %dd= l.formatted_address
    %dt Occupied at
    %dd= l.occupied_at.titlecase


