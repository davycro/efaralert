%legend
  Manager Editor

= form_for [:admin, @manager], :html => { :class => 'form-horizontal' } do |f|
  
  = horizontal_text_field @manager, :full_name
  = horizontal_text_field @manager, :username
  = community_center_selector_field @manager
  = horizontal_password_field @manager

  .form-actions
    %button.btn.btn-primary{:type=>'submit'} Save
    %a.btn{:href=>admin_managers_path} Cancel
