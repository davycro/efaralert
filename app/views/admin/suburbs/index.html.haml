.page-header
  %h3
    Suburbs
    .pull-right
      %a.btn.btn-primary.btn-small{:href => new_admin_suburb_path}
        %i.icon-plus.icon-white
        Create

- if flash[:notice].present?
  .alert
    = flash[:notice]
    %button.close{:type=>"button", "data-dismiss"=>"alert"} &times;

%table.table
  %thead
    %tr
      %th Name
  %tbody
    - @suburbs.each do |suburb|
      %tr
        %td= suburb.name
        %td
          .btn-group
            %a.btn.btn-mini.dropdown-toggle{"data-toggle"=>"dropdown", :href=>'#'}
              %i.icon-cog
              %span.caret
            %ul.dropdown-menu.pull-right
              %li
                %a{:href=>edit_admin_suburb_path(suburb)}
                  %i.icon-pencil
                  Edit
              %li
                %a{:href=>admin_suburb_path(suburb), "data-confirm"=>"Are you sure?", "data-method"=>"delete"}
                  %i.icon-trash
                  Delete